{
  "name": "@luxass/vscode-config",
  "version": "0.1.0",
  "description": "Typesafe Visual Studio Code configurations",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@9.15.0",
  "license": "MIT",
  "homepage": "https://github.com/luxass/vscode-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/luxass/vscode-config"
  },
  "bugs": {
    "url": "https://github.com/luxass/vscode-config/issues"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@types/vscode": ">=1.70.0"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.14.0",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.95.0",
    "eslint": "^9.16.0",
    "eslint-plugin-format": "^1.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0"
  }
}
